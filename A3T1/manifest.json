{
  "manifest_version": 3,
  "name": "Hyperlink Tracker",
  "version": "1.0",
  "description": "Tracks all hyperlinks on visited pages.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "*://*/*"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"], 
      "js": ["content.js"]
    }
  ]
}
